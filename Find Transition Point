int transitionPoint(int arr[], int n) {
        // code here
        if(arr[0]==1) return 0;
        if(arr[n-1]==0) return -1;
        
        int l=0, r=n-1, mid;
        while(l<=r){
            mid= (l+r)/2;
            if(arr[mid]==1 && arr[mid-1]==0) return mid;
            else if(arr[mid]==0) l= mid+1;
            else r= mid-1;
        }
        
        return 0;
        
    }
